{
    "extends": ["eslint:recommended"],
    "plugins": ["riot"],
    "env": {
    	"browser": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "globals": {
        "opts": true,
        "riot": true,
        "route" : false
    },
    "rules": {
        "no-undef":"off",
        "no-unused-vars": "off",
        "no-console": "off",
        "no-useless-escape" : "off",
        "no-irregular-whitespace" : "off"
    }
}
